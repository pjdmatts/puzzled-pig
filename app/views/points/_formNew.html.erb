<%= form_for([@trail, @trail.points.build]) do |f| %>
<div class="form-group">
  <%= f.label :name%><br>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :step %><br>
  <%= f.number_field :step, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :terrain %><br>
  <%= f.text_field :terrain, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :level %><br>
  <%= f.text_field :level, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.submit class: "btn btn-primary" %>
</div>
<% end %>