<p id="notice"><%= notice %></p>

<h1>Listing Trails</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Topic</th>
      <th>Source</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @trails.each do |trail| %>
      <tr>
        <td><%= link_to trail.name, trail %></td>
        <td><%= trail.topic %></td>
        <td><%= trail.source %></td>
        <td><%= link_to 'Edit', edit_trail_path(trail) %></td>
        <td><%= link_to 'Destroy', trail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

